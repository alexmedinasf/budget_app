<p style="color: green"><%= notice %></p>
<% totalSum = 0%>
<div id="nav">
  <h1>CashTrack</h1>
  <%= link_to "Categories", groups_path%>
  <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete } %>
</div>

<section id="entitiesIndex">
  <h1>Entities</h1>
  <%= link_to "Add Transaction", new_entity_path, class: "transaction-box" %>
  <% @entities.each do |entity| %>
    <% totalSum += entity.amount%>
    <div class="transaction-box">
      <table>
        <tr>
          <td><strong>Category</strong></td>
          <td><strong>Transaction</strong></td>
          <td><strong>Amount</strong></td>
          <td><strong>Date</strong></td>
          <td><strong>Actions</strong></td>
        </tr>  
        <tr>
          <td>
              <% @groups.each do |groups| %>
                <%if groups.id == entity.group_id%>
                  <%=groups.name%>
                <%end%>
              <%end%>
          </td>
          <td><%= entity.name %></td>
          <td><%= entity.amount %></td>
          <td><%= entity.created_at %></td>
          <td><%= link_to "Delete", entity %></td>
        </tr>
      </table>
    </div>
  <% end %>

  <div class="transaction-box">
    <h2>Total Amount : <%= totalSum %></h2>
  </div>
</section>
